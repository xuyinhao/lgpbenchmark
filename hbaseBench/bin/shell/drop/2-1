#!/bin/bash
# 1-4 drop_all 1个 表,并检查leofs数据

plog="/tmp/lgp-hbase.tool.detail.log"
a_tablename="ct_drop_tb"
#1. 创建表
createTableAndPut "$a_tablename"
if [ $? -ne 0 ];then
    echo 1 ;return 1
fi

#2 droptable
hbaseShell "disable '$a_tablename'"
dropAll "$a_tablename"

#3. 检查 i:表不在，ii: 后端数据不在了
if [ `checkNotExistTable $a_tablename` -eq 0 ] ;then
    echo 0;return 0
fi
echo 1

