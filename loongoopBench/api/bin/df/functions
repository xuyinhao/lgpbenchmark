#!/bin/bash
kilo=1024
mega=`expr $kilo \* 1024`
giga=`expr $mega \* 1024`
tera=`expr $giga \* 1024`
peta=`expr $tera \* 1024`
exa=`expr $peta \* 1024`
function datapoolDf() {
  ret=(`df --block-size=1 | grep "datapool"`)
  prefix=`echo ${ret[2]} ${ret[1]} | awk '{ printf "%0.f\n" ,$1*100/$2}'`
  echo "leofs:/// ${ret[@]:1:3} ${prefix}%"
}
function formatSize() {
  size=$1
  if [ "$size" -ge "$exa" ]; then
    echo $size $exa | awk '{printf("%.1f E", $1/$2)}'
  elif [ "$size" -ge "$peta" ]; then
    echo $size $peta | awk '{printf("%.1f P", $1/$2)}'
  elif [ "$size" -ge "$tera" ]; then
    echo $size $tera | awk '{printf("%.1f T", $1/$2)}'
  elif [ "$size" -ge "$giga" ]; then
    echo $size $giga | awk '{printf("%.1f G", $1/$2)}'
  elif [ "$size" -ge "$mega" ]; then
    echo $size $mega | awk '{printf("%.1f M", $1/$2)}'
  elif [ "$size" -ge "$kilo" ]; then
    echo $size $kilo | awk '{printf("%.1f k", $1/$2)}'
  else
    echo "$size B"
  fi
}
function datapoolDfh() {
  ret=(`df --block-size=1 | grep "datapool"`)
  prefix=`echo ${ret[2]} ${ret[1]} | awk '{ printf "%0.f\n" ,$1*100/$2}'`
  totalSpaceH=`formatSize ${ret[1]}`
  usedSpaceH=`formatSize ${ret[2]}`
  freeSpaceH=`formatSize ${ret[3]}`
  echo "leofs:/// $totalSpaceH $usedSpaceH $freeSpaceH ${prefix}%"
}
function dfOkCheck() {
  ret=(`$df $1 2>/dev/null`)
  #echo "ret:${ret[@]:0}"
  if [ $? -eq 0 ]; then
    prefix=${ret[@]:0:5}
    #echo "prefix:$prefix"
    if [ "$prefix" != "Filesystem Size Used Available Use%" ]; then
      return 0
    fi
    space=${ret[@]:5}
    #echo "space:$space"
    #echo "2:$2"
    if [ "$space" != "$2" ]; then
      return 0
    fi
    return 1
  fi
  return 0
}
function dfErrCheck() {
  ret=`$df $1 2>&1`
  #echo "ret:$ret"
  #echo "code:$?"
  if [ $? -ne 0 ]; then
    #echo "2:$2"
    str=`echo $ret | grep "$2"`
    #echo "str:$str"
    if [ "$str" == "" ]; then
      return 0
    fi
    return 1
  fi
  return 0
}
function getErrMsg() {
  echo "df: \`$1': No such file or directory"
}
dfArgMsg="Illegal option"
